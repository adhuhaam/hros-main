# HR/Employee Management System Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main HRMS Database
DB_HOST=localhost
DB_USERNAME=rccmgvfd_hros_user
DB_PASSWORD=your_secure_password_here
DB_NAME=rccmgvfd_hros
DB_PORT=3306

# Recruit Database
RECRUIT_DB_HOST=localhost
RECRUIT_DB_USERNAME=rccmgvfd_recruit_user
RECRUIT_DB_PASSWORD=your_secure_recruit_password_here
RECRUIT_DB_NAME=rccmgvfd_recruit
RECRUIT_DB_PORT=3306

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password_here
SMTP_ENCRYPTION=tls

# Email Settings
EMAIL_FROM_NAME=HROS System
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Session Configuration
SESSION_TIMEOUT=10800
SESSION_NAME=HROS_SESSION
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict

# Authentication Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=300
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true

# CSRF Protection
CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_LENGTH=32

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=300
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=5242880
FILE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
FILE_UPLOAD_PATH=uploads/
FILE_UPLOAD_BACKUP_PATH=backups/

# Document Storage
DOCUMENT_STORAGE_PATH=documents/
DOCUMENT_BACKUP_ENABLED=true
DOCUMENT_BACKUP_RETENTION_DAYS=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Configuration
APP_NAME=HROS
APP_VERSION=2.0.0
APP_ENVIRONMENT=production
APP_DEBUG=false
APP_TIMEZONE=Indian/Maldives
APP_LOCALE=en_US

# URL Configuration
APP_URL=https://hros.yourdomain.com
APP_BASE_PATH=/

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=error
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Security Logging
SECURITY_LOG_ENABLED=true
SECURITY_LOG_FILE=logs/security.log
SECURITY_LOG_LEVEL=warning

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_FILE=logs/audit.log
AUDIT_LOG_LEVEL=info

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATION_TYPES=login_alert,password_reset,account_created,system_alert

# Push Notifications (if applicable)
PUSH_NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATION_SERVER_KEY=your_push_server_key_here

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# API Configuration
API_ENABLED=true
API_RATE_LIMIT=1000
API_TOKEN_EXPIRY=86400

# Third-party Integrations
INTEGRATION_GOOGLE_WORKSPACE=false
INTEGRATION_MICROSOFT_365=false
INTEGRATION_SLACK=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=daily
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_PATH=backups/database/

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE=weekly
FILE_BACKUP_RETENTION_DAYS=90
FILE_BACKUP_PATH=backups/files/

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# System Monitoring
MONITORING_ENABLED=true
MONITORING_CHECK_INTERVAL=300
MONITORING_ALERT_EMAIL=admin@yourdomain.com

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_LOG_SLOW_QUERIES=true
PERFORMANCE_SLOW_QUERY_THRESHOLD=1.0

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600
CACHE_PATH=cache/

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (set to true for development)
DEVELOPMENT_MODE=false
SHOW_ERRORS=false
LOG_QUERIES=false

# Testing Configuration
TESTING_MODE=false
TEST_DATABASE_PREFIX=test_